<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>伯虎后台管理</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
  <link rel="stylesheet" href="/dist/css/skins/skin-blue.min.css">
</head>

<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <!-- 头部引入 -->
    <%- include('./main-header.ejs') %>
    <!-- 左边导航栏引入 -->
    <%- include('./main-slider.ejs') %>
    <!-- 右边控制栏引入 -->
    <%- include('./main-control.ejs') %>


    <!-- 主体 -->
    <div class="content-wrapper">
      <!-- 主体标题区 -->
      <section class="content-header">
        <h1>
          编辑推荐商品管理
          <!-- <small>后台首页</small> -->
        </h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
          <li class="active">产品管理</li>
          <li class="active">编辑推荐</li>
        </ol>
      </section>

      <!-- 主体内容区 -->
      <section class="content">

        <div class="box">
          <!-- 表格头 -->
          <div class="box-header with-border">
            <h3 class="box-title  pull-left">
              <!-- <a href="javascript:;">
                <button class="btn btn-md btn-primary" onclick="addModal()">
                  <span class="glyphicon glyphicon-plus"></span>添加
                </button>
              </a> -->
              本页最多8条数据。因数据结构嵌套暂时不做编辑等功能
            </h3>
            <div class="pull-right">
              <!-- 排序 -->
              <a href="/product/tuijian/sort?type=minPrice&key=1">
                <button class="btn btn-sm btn-link ">
                  <span class="glyphicon glyphicon-sort-by-attributes"></span>升序排列
                </button>
              </a>

              <a href="/product/tuijian/sort?type=minPrice&key=-1">
                <button class="btn btn-sm btn-link ">
                  <span class="glyphicon glyphicon-sort-by-attributes-alt"></span>降序排列
                </button>
              </a>
            </div>

            <!-- 表格体 -->
            <div class="box-body">
              <table class="table table-bordered">
                <tbody>
                  <tr>
                    <th class="text-center">序号</th>
                    <th class="text-center">产品ID</th>
                    <th class="text-center">产品名称</th>
                    <th class="text-center">产品价格</th>
                    <th class="text-center">操作</th>
                  </tr>
                  <!-- 商品列表 -->
                  <% for(var i=0;i<data.length;i++){ %>
                  <tr class="text-center">
                    <td class="col-md-1">
                      <%- i+1 %>
                    </td>
                    <td class="col-md-2">
                      <%- data[i].productId %>
                    </td>
                    <td class="col-md-5">
                      <%- data[i].name %>
                    </td>
                    <td class="col-md-2">
                      <%- data[i].products.minPrice %>
                    </td>
                    <td class="col-md-2">
                      <button type="button" class="btn btn-danger btn-sm" onclick="del()">删除</button>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
      </section>
    </div>

    <!-- 底部信息引入 -->
    <%- include('./main-footer.ejs') %>

  </div>
  <script src="/plugins/jQuery/jquery-2.2.3.min.js"></script>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <script src="/dist/js/app.min.js"></script>
</body>
<script>
  function del() {
    alert("不可删除")
  }
</script>

</html>